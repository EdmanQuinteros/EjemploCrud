<!-- agregamos el modelo-->
@model IEnumerable<CrudEmpleados.Models.Empleado>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Usuarios</h1>
<div class="row">
    <div class="col-12">
        <div class="d-grid gap-2">
            <a asp-action="Create" asp-controller="Home" class="btn btn-success"><i class="bi bi-plus"></i> Nuevo Empleado</a>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de Empleados</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="TablaEmpleados" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombres)</th>
                                    <th>@Html.DisplayNameFor(m => m.Apellidos)</th>
                                    <th>@Html.DisplayNameFor(m => m.Direccion)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.Puesto)</th>
                                    <th>@Html.DisplayNameFor(m => m.Estado)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Nombres)</td>
                                        <td>@Html.DisplayFor(m => item.Apellidos)</td>
                                        <td>@Html.DisplayFor(m => item.Direccion)</td>
                                        <td>@Html.DisplayFor(m => item.Telefono)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>@Html.DisplayFor(m => item.Puesto)</td>
                                        <td>@Html.DisplayFor(m => item.Estado)</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    }
                    else
                    {
                        <p>No hay registro a mostrar.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            //llamamos a datatable
            $('#TablaEmpleados').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "Filtrado de _MAX_ total entradas",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "firt": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}
